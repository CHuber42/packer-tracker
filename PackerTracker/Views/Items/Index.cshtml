@using Items.Models


<h1>Item List</h1>

@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (Item item in Model)
  {
    <li><a href='/items/@item.Id'>@item.Name</a></li>
  }
</ul>
<a href="/items/new">Add a new item.</a>
<p>OR</p><br>
<p>Select a sub-list to view:</p>
<form action="/items" method="get">
  <select>
  <option>Packed</option>
  <option>Unpacked</option>
  <option>Purchased</option>
  <option>Unpurchased</option>
  <option>All</option>
  </select>
  <button type="submit">Filter</button>
</form>
